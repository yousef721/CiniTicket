@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <i class="bi bi-film auth-icon"></i>
            <h2>Welcome Back</h2>
            <p>Sign in to continue your movie journey</p>
        </div>

        <form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="Account" class="form-label">Account</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person-fill"></i>
                    </span>
                    <input asp-for="Account" class="form-control" placeholder="Enter your username or email" />
                </div>
                <span asp-validation-for="Account" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock-fill"></i>
                    </span>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                </div>
                <span asp-validation-for="Password" class="validation-message"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMeCheck" />
                    <label asp-for="RememberMe" class="form-check-label" for="rememberMeCheck">
                        Keep me signed in
                    </label>
                </div>
                <a asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword" class="auth-link">
                    Forgot Password?
                </a>
            </div>

            <button type="submit" class="auth-btn">
                Sign In <i class="bi bi-arrow-right-circle-fill"></i>
            </button>
            <div class="d-flex align-items-center justify-content-evenly">

                <button type="button" class="social-auth-btn google">
                    <i class="bi bi-google"></i>
                    <span>Google</span>
                </button>

                <div>
                    <span class="auth-divider-text">OR</span>
                </div>

                <button type="button" class="social-auth-btn facebook">
                    <i class="bi bi-facebook"></i>
                    <span>Facebook</span>
                </button>

            </div>

            <div class="auth-footer">
                <p>
                    New to CineTicket? 
                    <a asp-area="Identity" asp-controller="Account" asp-action="Register">
                        Create an account
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="~/css/auth.css" />
}