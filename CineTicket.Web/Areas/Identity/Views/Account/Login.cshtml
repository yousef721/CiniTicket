@model LoginVM
@{
    ViewData["Title"] = "Login";
}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="auth-card card shadow-sm rounded-4 p-4 p-md-5 w-100">
        <div class="text-center mb-4">
            <i class="bi bi-film auth-icon fs-1 d-inline-block primary-color-custom"></i>
            <h2 class="mt-2 fw-semibold text-primary-custom">Welcome Back</h2>
            <p class="text-muted-custom">Sign in to continue your movie journey</p>
        </div>

        <form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary mb-3 rounded-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Account" class="form-label">Account</label>
                <div class="input-group rounded-4">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="Account" class="form-control" placeholder="Enter your username or email" />
                </div>
                <span asp-validation-for="Account" class="validation-message"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group rounded-4">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                </div>
                <span asp-validation-for="Password" class="validation-message"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMeCheck" />
                    <label asp-for="RememberMe" class="form-check-label" for="rememberMeCheck">
                        Keep me signed in
                    </label>
                </div>
                <a asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword" class="auth-link link-line">
                    Forgot Password?
                </a>
            </div>

            <button type="submit" class="auth-btn btn btn-primary-custom fw-semibold w-100 d-flex justify-content-center align-items-center gap-2 rounded-4 mb-3">
                Sign In <i class="bi bi-arrow-right-circle-fill"></i>
            </button>

            <div class="text-center my-3 position-relative">
                <hr class="my-4" />
                <span class="auth-divider-text fw-medium px-3 position-absolute top-50 start-50 translate-middle">OR</span>
            </div>

            <div class="d-flex flex-column align-items-center justify-content-center gap-3 mb-3">

                <button class="external-login google d-flex align-items-center justify-content-center gap-3 w-100 border-0 px-4 py-2 text-black rounded-4">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="24" height="24">
                        <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
                        <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
                        <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
                        <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
                        <path fill="none" d="M0 0h48v48H0z"/>
                    </svg>
                    <span class="fw-medium">Continue with Google</span>
                </button>

                <button class="external-login facebook d-flex align-items-center justify-content-center gap-3 w-100 border-0 px-4 py-2 text-white rounded-4">
                    <i class="bi bi-facebook fs-6"></i>
                    <span class="fw-semibold">Continue with Facebook</span>
                </button>

            </div>


            <div class="auth-footer text-center mt-3 pt-2">
                <p class="mb-0">
                    New to CineTicket?
                    <a asp-area="Identity" asp-controller="Account" asp-action="Register" class="link-line fw-semibold">
                        Create an account
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v22.0"></script>
    <partial name="_ValidationScriptsPartial" />
}
