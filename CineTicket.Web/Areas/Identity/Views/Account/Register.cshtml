@model RegisterVM

@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <i class="bi bi-film auth-icon"></i>
            <h2>Create New Account</h2>
            <p>Join CineTicket today</p>
        </div>

        <form asp-area="Identity" asp-controller="Account" asp-action="Register" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                        </div>
                        <span asp-validation-for="FirstName" class="validation-message"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                        </div>
                        <span asp-validation-for="LastName" class="validation-message"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-envelope-fill"></i>
                    </span>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                </div>
                <span asp-validation-for="Email" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock-fill"></i>
                    </span>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                </div>
                <span asp-validation-for="Password" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock-fill"></i>
                    </span>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
            </div>

            <button type="submit" class="auth-btn">
                <i class="bi bi-person-plus-fill me-2"></i>Register
            </button>

            <div class="auth-footer">
                <p>
                    Already have an account? 
                    <a asp-area="Identity" asp-controller="Account" asp-action="Login">
                        Login here
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="~/css/auth.css" />
}