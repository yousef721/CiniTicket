@model List<Movie>
@{
    ViewData["Title"] = "Home Page";
}

<div class="hero mb-5 p-5 position-relative text-white">
    <div class="hero-overlay position-absolute top-0 start-0 w-100 h-100"></div>

    <div class="hero-content text-center py-5 position-relative z-2 container">
        <h1 class="hero-title display-3 fw-bold mb-3 animate__animated animate__fadeInDown">
            Welcome to <span class="d-block d-md-inline">CineTicket</span>
        </h1>

        <p class="lead mb-4 animate__animated animate__fadeInUp animate__delay-1s px-2 px-md-5">
            Discover and book tickets for the latest movies
        </p>

        <div class="d-flex flex-column flex-md-row justify-content-center gap-3 mb-4 animate__animated animate__fadeInUp animate__delay-2s">
            <a href="#featured-movies" class="hero-btn btn btn-lg">
                Explore Movies <i class="bi bi-arrow-right-circle ms-2"></i>
            </a>
            <a href="/Cinemas" class="btn btn-outline-light btn-lg">
                Find Cinemas <i class="bi bi-geo-alt ms-2"></i>
            </a>
        </div>

        <div class="d-flex justify-content-center gap-4 flex-wrap mt-4 animate__animated animate__fadeInUp animate__delay-3s">
            <div class="hero-badge fw-bold fs-6 fs-md-5 px-3 px-md-4 py-2 rounded-pill translate-up">
                🎬 23 Movies
            </div>
            <div class="hero-badge fw-bold fs-6 fs-md-5 px-3 px-md-4 py-2 rounded-pill translate-up">
                🏢 10 Cinemas
            </div>
            <div class="hero-badge fw-bold fs-6 fs-md-5 px-3 px-md-4 py-2 rounded-pill translate-up">
                ⭐ 50+ Actors
            </div>
        </div>

        <div class="mt-5 animate__animated animate__fadeIn animate__delay-4s m-auto d-inline-block translate-down">
            <a href="#featured-movies" class="text-white fs-1">
                <i class="bi bi-chevron-double-down animate__animated animate__bounce animate__infinite"></i>
            </a>
        </div>
    </div>
</div>


<div class="container">
    <partial name="_Search" />

    <section id="featured-movies" class="featured-section mb-5">
        <h2 class="section-title position-relative d-inline-block fw-bold mb-4">Featured Movies</h2>
        <partial name="_MovieCard" model="Model"/>
    </section>
</div>

@section Scripts {
    @if (TempData["WarningMessage"] != null)
    {
        <script>
            toastr.warning('@TempData["WarningMessage"]');
        </script>
    }
    
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            toastr.success('@TempData["SuccessMessage"]');
        </script>
    }
}
