@model IEnumerable<Category>

<div>
    <h1 class="mb-4">Categories</h1>
    <a asp-action="Create" class="btn btn-success mb-3">Create New Category</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Details" asp-controller="Category" asp-route-categoryId="@category.Id" class="btn btn-info btn-md">View Movies</a>
                        <a asp-action="Edit" asp-controller="Category" asp-route-categoryId="@category.Id" class="btn btn-warning btn-md">Edit</a>
                        <a asp-action="Delete" asp-controller="Category" asp-route-categoryId="@category.Id" class="btn btn-danger btn-md">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>