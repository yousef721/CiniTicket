@model Actor

<div>
    <h1 class="mb-4">Create New Actor</h1>

    <form asp-controller="Actor" asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Bio" class="form-label"></label>
            <textarea asp-for="Bio" class="form-control"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProfilePicture" class="form-label"></label>
            <input asp-for="ProfilePicture" class="form-control" />
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="News" class="form-label"></label>
            <input asp-for="News" class="form-control" />
            <span asp-validation-for="News" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>